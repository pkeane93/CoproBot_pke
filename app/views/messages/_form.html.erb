<%= form_with model: [chat, message],  
  data: { turbo: true, turbo_stream: true },
  html: { 
    id: "new_message_form", 
    class: "flex items-center gap-2 w-full" 
    }  do |myform| %>
  <%= myform.label :content, "Ask your question:", class: "sr-only" %>
  <%= myform.text_area :content, 
    rows: 2, 
    placeholder: "Type your message...", 
    class: "flex-1 resize-none bg-base-100 border border-gray-300 rounded-full px-4 py-2 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" %>
  <%= myform.submit "Send", class: "btn btn-primary rounded-full px-5" %>
<% end %>
